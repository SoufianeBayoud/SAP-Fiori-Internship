<mvc:View controllerName="project1.controller.CountOrder" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:f="sap.f" xmlns:card="sap.f.cards" displayBlock="true" height="100%">
  <!-- class="autoHeightWidth" is in css -->
    <ScrollContainer height="100%" width="100%" vertical="true" horizontal="false">
  <Toolbar>
      <Button icon="sap-icon://nav-back" press="onNavBack" />
      <Title text="{i18n>OverviewTitle}" level="H2" />

    </Toolbar>

  <HBox>
  <f:Card class="sapUiMediumMargin" width="300px">
    <f:header>
      <card:Header title="Users" subtitle="Number of orders by user" iconSrc="sap-icon://customer" />
    </f:header>
    <f:content>
      <VBox class="sapUiSmallMargin" id="id1HBox" alignItems="Center" justifyContent="Start">
      </VBox>
      
    </f:content>
  </f:Card>
  <VBox >
  <HBox width="600px">
  <f:Card class="sapUiMediumMargin" width="300px">
    <f:header>
      <card:Header title="ProfitCenter" subtitle="Number of ProfitCenter | Type" iconSrc="sap-icon://lead"/>
    </f:header>
    <f:content>
    
      <VBox class="sapUiSmallMargin" id="id2HBox" alignItems="Center" justifyContent="Start">
      </VBox>
    </f:content>
  </f:Card>
  <f:Card class="sapUiMediumMargin" width="300px">
    <f:header>
      <card:Header title="Actual Number Of Orders" iconSrc="sap-icon://number-sign" />
    </f:header>
    <f:content>
      <VBox class="sapUiSmallMargin"  id="id4HBox" alignContent="Center"  justifyContent="Center">
      <Label id="totalOrders" class="labelTotalOrders" />
      </VBox>
    </f:content>
  </f:Card>
  </HBox>
  <f:Card class="sapUiMediumMargin" width="700px" >
    <f:header>
      <card:Header title="Order By Year Evolution" subtitle="Number of orders | Year" iconSrc="sap-icon://date-time"/>
    </f:header>
    <f:content>
      <VBox class="sapUiSmallMargin" id="id3HBox" alignItems="Baseline" justifyContent="Start" width="600px">
      </VBox>
    </f:content>
  </f:Card>
  </VBox>
  </HBox>
    </ScrollContainer>
</mvc:View>
